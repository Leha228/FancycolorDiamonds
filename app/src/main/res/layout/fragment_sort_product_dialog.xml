<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="225dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="225dp"
        android:layout_marginRight="225dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/colorHeaderText"
            android:text="По умолчанию"
            android:checked="true"
            android:textColor="@color/colorHeaderText"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorGraySmall"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonDefault" />

        <RadioButton
            android:id="@+id/radioButtonPriceMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/colorHeaderText"
            android:text="Цена (высокая > низкая)"
            android:textColor="@color/colorHeaderText"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonPriceMax" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorGraySmall"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonPriceMax" />

        <RadioButton
            android:id="@+id/radioButtonPriceMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/colorHeaderText"
            android:text="Цена (низкая > высокая)"
            android:textColor="@color/colorHeaderText"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonPriceMax" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorGraySmall"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonPriceMin" />

        <RadioButton
            android:id="@+id/radioButtonPriceBegin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/colorHeaderText"
            android:text="Названия (А - Я)"
            android:textColor="@color/colorHeaderText"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonPriceMin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorGraySmall"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonPriceBegin" />

        <RadioButton
            android:id="@+id/radioButtonPriceEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/colorHeaderText"
            android:text="Названия (Я - А)"
            android:textColor="@color/colorHeaderText"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonPriceBegin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorGraySmall"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonPriceEnd" />

    </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>